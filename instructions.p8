pico-8 cartridge // http://www.pico-8.com
version 43
__lua__
function _draw()
 cls(1)
 x,y=15,13
 
 instructions={
  {{1},"background"},
  {{8},"player controls"},
  {{9},"collide/scenery"},
  {{10},"player can get"},
  {{11},"hurts player"},
  {{12},"moves around"},
  {{13},"chases player"},
  {{14},"player can attack"},
  {{9,10},"is a door"},
  {{10,13},"player can pickup/move"},
  {{11,13},"attacks player"},
  {{9,14},"player can mine"}
 } 
 for j,i in pairs(instructions) do
  instruction(x,y+j*8+2,i[1],i[2]) 
 end
end
function instruction(x,y,c,msg)
 for _,l in pairs(c) do
  circfill(x,y,3,0)
  circfill(x,y,2,l)
  pset(x+1,y-1,7)
  x+=8
 end
 print(msg,x-2,y-2,7)
end
